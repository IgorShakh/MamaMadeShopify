    <li class="HorizontalList__Item">
      <a href="{{ settings.social_facebook | replace_first: 'https://', '' | replace_first: 'http://', '' | prepend: 'https://' }}" class="Icon-Wrapper--clickable" target="_blank" rel="noopener" aria-label="Facebook">
