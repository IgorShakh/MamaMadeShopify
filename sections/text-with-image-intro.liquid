{%- render 'text-with-image-panel' -%}

{% schema %}
{
    "name": "Text panel intro",
    "class": "shopify-section--stacked",
    "settings": [{
            "type": "text",
            "id": "subheading",
            "label": "Sub-heading",
            "default": "Sub-heading"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Title"
        },
        {
            "type": "color",
            "id": "color_bg",
            "label": "Background colour",
            "default": "#fff"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "820 x 650px .jpg recommended"
        },
        {
            "type": "checkbox",
            "id": "image_remove_padding",
            "label": "Remove image padding",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "reverse",
            "label": "Image first?",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "stacked",
            "label": "Stack images & text",
            "default": false
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Text",
            "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link text"
        },
        {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
        },
        {
            "type": "checkbox",
            "id": "show_quote",
            "label": "Quote",
            "default": true
        },
        {
            "type": "text",
            "id": "quote_text",
            "label": "Quote text"
        },
        {
            "type": "text",
            "id": "quote_author",
            "label": "Quote author"
        }
    ],
    "presets": [{
        "category": "Text",
        "name": "Text panel intro",
        "settings": {}
    }]
}
{% endschema %}