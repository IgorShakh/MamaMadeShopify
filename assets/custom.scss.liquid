/*--------------------------------------------------------------
# Cards
--------------------------------------------------------------*/
.card {
  .ProductItem__Wrapper {
  	transform: scale(1);
  	transition: background-size $base-trans-duration $base-trans;
    margin: 0 0 2rem 0;
    height: 600px;
/*     max-height: 980px; */
    width: 100%;
    display: block;
    background-repeat: no-repeat;
    background-size: cover;
    overflow: hidden;

    &:before {
      content: "";
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 80%);
    position: absolute;
    left: 0;
    top: 0;
    opacity: 1;
    transition: opacity $base-trans-duration $base-trans;
    }

    &:hover {

      &:before {
       	 opacity: 0.8;
        transition: opacity $base-trans-duration $base-trans;

      }

      .card__body {
        transform: translateY(-20px);
        transition: transform $base-trans-duration $base-trans;
      }
    }
  }

  .card__image {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
/*     height: 89vh; */
    width: 100%;
    display: block;
  }

  .card__body {
    transform: translateY(0);
    transition: transform $base-trans-duration $base-trans;
    margin: 0;
    position: absolute;
    bottom: 0;
    background-color: transparent;
    border-radius: 0;
    padding: 3rem;
    padding: 3rem 3rem 2rem 3rem;
    width: 100%;
    text-align: left;

    p {
      font-family: "Gogh",sans-serif;
      letter-spacing: 0.01rem;
      color: #fff;
      font-size: 2em;
      line-height: 1.3;
      margin: 0 0 1rem 0;
      opacity: 0.8;
      font-size: 20px;
    }

    .ProductItem__Title {
      font-size: 4em;
      font-weight: 500;
      font-family: $font-serif;
      letter-spacing: 0.01rem;
      color: #fff;
      text-transform: none;
      line-height: 1.1;
      margin-bottom: 1rem;
    }

    .ProductItem__PriceList {
      display: none;

      font-size: 22px;
      font-weight: normal;
      letter-spacing: 0.1rem;
      text-align: right;
      position: absolute;
      right: 4rem;
      bottom: 5rem;

      .ProductItem__Price {
        color: #fff;
      }
    }
  }
}

