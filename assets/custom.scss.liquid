      justify-content: flex-end;
    }

    .home-slideshow--y-start .home-slideshow__content {
      align-items: flex-start;
    }

    .home-slideshow--y-center .home-slideshow__content {
      align-items: center;
    }

    .home-slideshow--y-end .home-slideshow__content {
      align-items: flex-end;
    }

    .text-left .home-slideshow__content {
      text-align: left!important;
    }

    .text-center .home-slideshow__content {
      text-align: center!important;

      .home-slideshow__title,
      .home-slideshow__description {
        margin-left: auto;
        margin-right: auto;
      }
    }

    .text-right .home-slideshow__content {
      text-align: right!important;

      .home-slideshow__title,
      .home-slideshow__description {
        margin-left: auto;
      }
    }

    .home-slideshow__title {
      font-size: 61px;
      max-width: 700px;
    }

    .home-slideshow__description {
      max-width: 500px;

      * {
        font-size: 18px;
      }
    }

    .home-slideshow__content {
      background: transparent;
      padding: 100px 26px 100px;
      position: absolute;
      top: 0;
      right: 0;
      left: 50%;
      bottom: 0;
      display: flex;

      transform: translateX(-50%);
      width: 100%;
      max-width: 1650px;
    }
  }
